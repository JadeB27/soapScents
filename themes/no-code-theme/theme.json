{
	"version": 2,
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"settings": {
		"appearanceTools": true,
		"useRootPaddingAwareAlignments": true,
		"color": {
			"defaultPalette": false,
			"defaultGradients": false,
			"defaultDuotone": false,
			"custom": false,
			"customGradient": false,
			"customDuotone": false,
			"palette": [
				{
					"slug": "background",
					"color": "#F8F4ED",
					"name": "Background"
				},
				{
					"slug": "text",
					"color": "#3E3E3E",
					"name": "Text"
				},
				{
					"slug": "accent",
					"color": "#E5D4EF",
					"name": "Accent"
				},
				{
					"slug": "button-hover",
					"color": "#A7DAB1",
					"name": "Button Hover"
				}
			]
		},
		"layout": {
			"contentSize": "clamp(90%, 1100px, 100%)",
			"wideSize": "clamp(95%, 1800px, 100%)"
		},
		"typography": {
			"fontFamilies": [
				{
					"name": "System (Roboto, Segoe UI, Ubuntu)",
					"slug": "system",
					"fontFamily": "-apple-system,BlinkMacSystemFont,\"Segoe UI\",Roboto,Oxygen-Sans,Ubuntu,Cantarell,\"Helvetica Neue\",sans-serif"
				},
				{
					"name": "Afacad Flux",
					"slug": "afacad",
					"fontFamily": "'Afacad Flux', serif"
				}
			]
		}
	},
	"styles": {
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--afacad)"
		},
		"color": {
			"background": "var(--wp--preset--color--background)",
			"text": "var(--wp--preset--color--text)"
		},
		"blocks": {
			"core/paragraph": {
				"typography": {
					"fontSize": "clamp(16px, 18px, 20px)",
					"lineHeight": "1.6"
				},
				"spacing": {
					"padding": {
						"top": "clamp(10px, 20px, 30px)",
						"right": "clamp(10px, 20px, 30px)",
						"bottom": "clamp(10px, 20px, 30px)",
						"left": "clamp(10px, 20px, 30px)"
					}
				}
			},
			"core/heading": {
				"typography": {
					"fontSize": "clamp(24px, 32px, 40px)",
					"fontWeight": "700"
				},
				"spacing": {
					"padding": {
						"top": "clamp(10px, 20px, 30px)",
						"right": "clamp(10px, 20px, 30px)",
						"bottom": "clamp(10px, 20px, 30px)",
						"left": "clamp(10px, 20px, 30px)"
					}
				}
			},
			"core/button": {
				"color": {
					"background": "var(--wp--preset--color--button-hover)",
					"text": "var(--wp--preset--color--text)"
				}
			}
		}
	},
	"templateParts": [
		{
			"name": "header",
			"title": "Header",
			"area": "header"
		},
		{
			"name": "footer",
			"title": "Footer",
			"area": "footer"
		}
	]
}